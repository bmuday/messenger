{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/createRoom.js",
    "app/chatt/page.jsx",
    "app/blog/page.jsx",
    "lib/utils.js",
    "lib/constants/constants.js",
    "dummydata.js",
    "middleware.js",
    "app/sign-up/page.jsx",
    "app/login/page.jsx",
    "app/rooms/page.jsx",
    "app/members/page.jsx",
    "app/api/rooms/route.js",
    "app/directus.js",
    "app/error.tsx",
    "app/page.jsx",
    "app/loading.jsx",
    "app/layout.tsx",
    "app/app/page.jsx",
    "components/header.jsx",
    "components/footer.jsx",
    "lib/directus.js",
    "components/avatar.jsx"
  ],
  "exclude": ["node_modules"]
}
